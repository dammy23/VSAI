{
    "name": "claude-vscode-extension",
    "displayName": "Claude for VS Code",
    "description": "An extension that integrates Anthropic's Claude into VS Code for chat, code completion, and code fixing.",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.83.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:claude.chat",
        "onCommand:claude.codeCompletion",
        "onCommand:claude.codeFix",
        "onCommand:claude.setApiKey"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "claude.chat",
                "title": "Claude: Start Chat"
            },
            {
                "command": "claude.codeCompletion",
                "title": "Claude: Code Completion"
            },
            {
                "command": "claude.codeFix",
                "title": "Claude: Fix Code"
            },
            {
                "command": "claude.setApiKey",
                "title": "Claude: Set API Key"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "claude.codeCompletion",
                    "group": "navigation"
                },
                {
                    "when": "editorHasSelection",
                    "command": "claude.codeFix",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "claude-sidebar",
                    "title": "Claude",
                    "icon": "media/robot.svg"
                }
            ]
        },
        "views": {
            "claude-sidebar": [
                {
                    "id": "claude.chat",
                    "name": "Chat"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.83.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "eslint": "^8.28.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "typescript": "^4.9.3",
        "@vscode/test-electron": "^2.2.0"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.20.1"
    }
}
